<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Queens Gadgets - Premium Electronics Store</title>
    <style>
        :root {
            --primary: #2A2E35;
            --secondary: #00C853;
            --accent: #FF6D00;
            --light: #F8F9FA;
            --dark: #212529;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', sans-serif;
        }

        body {
            background-color: var(--light);
            line-height: 1.6;
        }

        header {
            background: var(--primary);
            color: white;
            padding: 1.5rem 0;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .nav-container {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 2rem;
        }

        .logo {
            font-size: 1.8rem;
            font-weight: 700;
            color: white;
            text-decoration: none;
        }

        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 2rem;
            padding: 3rem 2rem;
            max-width: 1200px;
            margin: 0 auto;
        }

        .product-card {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 4px 6px rgba(0,0,0,0.05);
            border: 1px solid #e0e0e0;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.1);
        }

        .product-image-container {
            height: 250px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #f8f8f8;
            border-radius: 8px;
            overflow: hidden;
            margin-bottom: 1.2rem;
        }

        .product-image {
            max-width: 100%;
            max-height: 100%;
            width: auto;
            height: auto;
            object-fit: contain;
            transition: transform 0.3s ease;
        }

        .product-card:hover .product-image {
            transform: scale(1.05);
        }

        .product-price {
            color: var(--secondary);
            font-size: 1.4rem;
            font-weight: 700;
            margin: 0.8rem 0;
        }

        .order-btn {
            background: var(--secondary);
            color: white;
            padding: 0.8rem 1.5rem;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .order-btn:hover {
            background: #009624;
            transform: scale(0.98);
        }

        .contact-section {
            text-align: center;
            padding: 4rem 2rem;
            background: var(--dark);
            color: white;
        }

        .whatsapp-btn {
            background: #25D366;
            padding: 1rem 2rem;
            border-radius: 8px;
            color: white;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.8rem;
            margin: 1rem;
            transition: transform 0.2s ease;
        }

        .whatsapp-btn:hover {
            transform: scale(1.02);
        }

        footer {
            background: var(--primary);
            color: white;
            text-align: center;
            padding: 2rem;
            margin-top: 3rem;
        }

        .confirmation-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }

        .modal-content {
            background: white;
            padding: 2rem;
            border-radius: 12px;
            width: 90%;
            max-width: 400px;
            text-align: center;
        }

        .modal-buttons {
            margin-top: 1.5rem;
            display: flex;
            gap: 1rem;
            justify-content: center;
        }

        .modal-btn {
            padding: 0.8rem 1.5rem;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.2s ease;
        }

        .confirm-btn {
            background: var(--secondary);
            color: white;
        }

        .cancel-btn {
            background: #e0e0e0;
            color: var(--dark);
        }

        @media (max-width: 768px) {
            .products-grid {
                grid-template-columns: 1fr;
                padding: 2rem 1rem;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="nav-container">
            <a href="#" class="logo">GadgetHub GH</a>
            <div class="nav-links">
                <a href="#products" class="order-btn">Products</a>
            </div>
        </nav>
    </header>

    <main>
        <section class="products-grid" id="products">
            <!-- Wireless Controller -->
            <div class="product-card">
                <div class="product-image-container">
                    <img src="https://i.ebayimg.com/images/g/M9kAAOSw2V1g3Xyw/s-l1600.webp" 
                         alt="Wireless Controller" class="product-image">
                </div>
                <h3>Wireless BT Mobile Controller</h3>
                <p class="product-price">GH₵ 220.00</p>
                <p>For iOS/Android Tablets & Smartphones</p>
                <button class="order-btn" onclick="showConfirmation()">
                    <i class="fas fa-shopping-cart"></i> Order Now
                </button>
            </div>

            <!-- HDMI Cable -->
            <div class="product-card">
                <div class="product-image-container">
                    <img src="https://i5.walmartimages.com/asr/22c971ab-b1aa-489a-a1cc-9c7222185087.00122f59f1936afae71af9b9e04712c6.jpeg" 
                         alt="HDMI Cable" class="product-image">
                </div>
                <h3>1.5m High-Speed 4K HDMI Cable</h3>
                <p class="product-price">GH₵ 85.00</p>
                <p>Ultra-Fast Data Transfer | 4K Resolution</p>
                <button class="order-btn" onclick="showConfirmation()">
                    <i class="fas fa-shopping-cart"></i> Order Now
                </button>
            </div>

            <!-- Car Phone Holder -->
            <div class="product-card">
                <div class="product-image-container">
                    <img src="https://i.ebayimg.com/images/g/JG0AAOSwVO1mdcQD/s-l1600.webp" 
                         alt="Car Phone Holder" class="product-image">
                </div>
                <h3>VICSEED Car Phone Holder</h3>
                <p class="product-price">GH₵ 150.00</p>
                <p>Powerful Suction | Rally Racing-Grade</p>
                <button class="order-btn" onclick="showConfirmation()">
                    <i class="fas fa-shopping-cart"></i> Order Now
                </button>
            </div>

            <!-- Wireless Mouse -->
            <div class="product-card">
                <div class="product-image-container">
                    <img src="https://i.ebayimg.com/images/g/5QAAAOSw1s9j6rFQ/s-l1600.webp" 
                         alt="Wireless Mouse" class="product-image">
                </div>
                <h3>Rechargeable Bluetooth Mouse</h3>
                <p class="product-price">GH₵ 120.00</p>
                <p>1600DPI RGB | Ergonomic Design</p>
                <button class="order-btn" onclick="showConfirmation()">
                    <i class="fas fa-shopping-cart"></i> Order Now
                </button>
            </div>

            <!-- JBL Headphones -->
            <div class="product-card">
                <div class="product-image-container">
                    <img src="https://i.ebayimg.com/images/g/-tIAAOSwhchjlBpE/s-l1600.webp" 
                         alt="JBL Headphones" class="product-image">
                </div>
                <h3>JBL Tune 510BT Headphones</h3>
                <p class="product-price">GH₵ 350.00</p>
                <p>Wireless On-Ear | Purebass Sound</p>
                <button class="order-btn" onclick="showConfirmation()">
                    <i class="fas fa-shopping-cart"></i> Order Now
                </button>
            </div>

            <!-- P9 Headphones -->
            <div class="product-card">
                <div class="product-image-container">
                    <img src="https://shopflix.co.tz/public/uploads/all/yTssM9aY5jy3X37K11GE5xhiptDiysQ081yV5zr0.jpg" 
                         alt="P9 Headphones" class="product-image">
                </div>
                <h3>P9 Wireless Headphones</h3>
                <p class="product-price">GH₵ 280.00</p>
                <p>Over-Ear Bluetooth | Deep Bass</p>
                <button class="order-btn" onclick="showConfirmation()">
                    <i class="fas fa-shopping-cart"></i> Order Now
                </button>
            </div>

            <!-- AirPods 4 -->
            <div class="product-card">
                <div class="product-image-container">
                    <img src="https://cdsassets.apple.com/live/7WUAS350/images/tech-specs/121204-airpods-4-anc.png" 
                         alt="AirPods 4" class="product-image">
                </div>
                <h3>AirPods 4 with ANC</h3>
                <p class="product-price">GH₵ 650.00</p>
                <p>Active Noise Cancellation | Spatial Audio</p>
                <button class="order-btn" onclick="showConfirmation()">
                    <i class="fas fa-shopping-cart"></i> Order Now
                </button>
            </div>
        </section>
    </main>

    <!-- Confirmation Modal -->
    <div class="confirmation-modal" id="confirmationModal">
        <div class="modal-content">
            <h3>Confirm Your Order</h3>
            <p>Are you sure you want to proceed with this order?</p>
            <div class="modal-buttons">
                <button class="modal-btn confirm-btn" onclick="proceedToOrder()">Yes, Continue</button>
                <button class="modal-btn cancel-btn" onclick="closeConfirmation()">Cancel</button>
            </div>
        </div>
    </div>

    <!-- Contact Section -->
    <section class="contact-section">
        <h2>Need Help? Chat with Us</h2>
        <div style="margin-top: 2rem;">
            <a href="https://wa.me/233207659704" class="whatsapp-btn" target="_blank">
                <i class="fab fa-whatsapp"></i> WhatsApp Support
            </a>
            <a href="https://wa.me/233207659704" class="whatsapp-btn" target="_blank">
                <i class="fab fa-whatsapp"></i> Sales Support
            </a>
        </div>
    </section>

    <footer>
        <p>© 2025 GadgetHub Ghana. All rights reserved</p>
        <p>Secure Shopping | Fast Delivery | Quality Guaranteed</p>
    </footer>

    <script>
        const ORDER_FORM_URL = 'YOUR_GOOGLE_FORM_LINK';

        function showConfirmation() {
            document.getElementById('confirmationModal').style.display = 'flex';
        }

        function closeConfirmation() {
            document.getElementById('confirmationModal').style.display = 'none';
        }

        function proceedToOrder() {
            window.open(ORDER_FORM_URL, '_blank');
            closeConfirmation();
        }

        window.onclick = function(event) {
            const modal = document.getElementById('confirmationModal');
            if (event.target === modal) {
                closeConfirmation();
            }
        }
    </script>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</body>
</html>
